<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.runtigersrun.runtigers">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="Run Tigers Run"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".Registration" />
        <activity android:name=".activity.Tracks" />
        <activity android:name=".TrackEditor" />
        <activity android:name=".activity.UserInfo" />
        <activity android:name=".activity.EditUser" />
        <activity android:name=".Groups" />
        <activity android:name=".GroupEditor" />
        <activity android:name=".activity.Route"></activity>
    </application>

</manifest>